<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - ProductPromotion</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link href="~/css/productpromotion.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BAS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Product/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Category/Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <a class="btn btn-success btn-sm ml-3" href="cart.html">
                            <i class="fa fa-shopping-cart"></i> Cart
                            <span class="badge badge-light">3</span>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    @*<partial name="_CookieConsentPartial" />*@
    @RenderBody()

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p class="m-0 text-white">Copyright &copy; BAS</p>
                </div>
                <div class="col-md-4">
                    <p class="m-0 text-white">Contact Info:</p>
                    <p class="m-0 text-white">Phone: 500-000-0000 <br />Address: 1234 Test <br />Email: bas.ibrahim7@gmail.com</p>
                </div>
                <div class="col-md-4">
                    @if (IsSectionDefined("FooterCustomize"))
                    {
                        RenderSection("FooterCustomize");
                    }
                    else
                    {
                        <p class="m-0 text-white">Smart Phone of the Day</p>
                        <p class="m-0 text-white">HUAWEI P30 - Super Camera System: 5X Hybrid Zoom & Amazing Look</p>
                    }
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
